<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Login_Input_layout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="android:paddingTop">5dp</item>
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/jerry_grey</item>
        <item name="android:textSize">20sp</item>
        <item name="hintTextColor">@color/jerry_grey</item>
        <item name="background">@null</item>
    </style>

    <style name="Input_layout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="android:paddingTop">3dp</item>
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/jerry_grey</item>
        <item name="android:textSize">12sp</item>
        <item name="hintTextColor">@color/jerry_grey</item>
        <item name="background">@null</item>
    </style>

    <style name="Menu_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textColor">@color/jerry_dark_grey</item>
    </style>

    <style name="Menu_Item_CardView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardBackgroundColor">@color/jerry_blue</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="Menu_Item_LinearLayout" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Menu_Item_ImageView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="Menu_Item_EditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="recycleView_Item_Text" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textColor">@color/jerry_dark_grey_opacity</item>
    </style>
    <style name="SwitchCompatStyle" >
        <item name="thumbTint">@color/switch_color</item>
        <item name="trackTint">@color/switch_color_track</item>
    </style>

    <style name="recycleView_Table_Label" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textColor">@color/jerry_dark_grey</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/jerry_dark_grey</item>
    </style>
</resources>