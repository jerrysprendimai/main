<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityOrder2"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText android:id="@+id/order_invisibleFocusHolder"
                  style="@style/InvisibleFocusHolder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:layout_gravity="top"
            android:background="@color/jerry_grey_opacity"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_gravity="center"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    app:cardElevation="0dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/jerry_blue"
                        android:backgroundTint="@color/jerry_blue"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="1dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_margin="0dp"
                                android:adjustViewBounds="false"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_shopping_cart_white"
                                app:tint="@color/white"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        style="@style/recycleView_Item_Text"
                        android:hint="@string/order"
                        android:textStyle="bold"
                        android:textColorHint="@color/white"
                        android:textSize="22sp"
                        android:layout_gravity="start"
                        android:ems="5"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="3dp">
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/recycleView_Item_Text"
                        android:layout_gravity="left"
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        app:boxCornerRadiusTopStart="8dp"
                        android:paddingTop="5dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/oder_p2_textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/jerry_blue"
                            android:focusedByDefault="false"
                            android:ems="12"
                            android:scrollbarTrackVertical="@drawable/vertical_scrollview_track"
                            android:scrollbarThumbVertical="@drawable/vertical_scrollview_thumb"
                            android:scrollbarStyle="insideInset"
                            android:scrollbarAlwaysDrawVerticalTrack="true"
                            android:fadeScrollbars="false"
                            android:scrollbars="vertical"
                            android:fontFamily="@font/poppinsmedium"
                            android:text=""
                            android:hint="@string/object_jobDescription"
                            android:inputType="textMultiLine"
                            android:minLines="5"
                            android:maxLines="10"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="12sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal">
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alignmentMode="alignBounds"
                    android:columnCount="3"
                    android:layout_weight="1"
                    android:columnOrderPreserved="false"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/order_photo_recycleView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </androidx.recyclerview.widget.RecyclerView>
                </GridLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_gravity="right"
                android:gravity="right">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/order_p2_add_photo_buttons_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        android:gravity="right">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/oder_p2_add_photo_cardView"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_vertical"
                            android:backgroundTint="@color/fab_color"
                            app:cardCornerRadius="20dp">
                            <LinearLayout
                                android:id="@+id/oder_p2_add_photo_linearLayout"
                                style="@style/Menu_Item_LinearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ic_attachment_white">
                                </ImageView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/oder_p2_take_photo_cardView"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_vertical"
                            android:backgroundTint="@color/fab_color"
                            app:cardCornerRadius="20dp">
                            <LinearLayout
                                android:id="@+id/oder_p2_take_photo_linearLayout"
                                style="@style/Menu_Item_LinearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ic_camera_white">
                                </ImageView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/order_p2_delete_photo_buttons_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/order_p2_delete_photo_cardView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/fab_color"
                        app:cardCornerRadius="20dp">
                        <LinearLayout
                            android:id="@+id/order_p2_delete_photo_linearLayout"
                            style="@style/Menu_Item_LinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_delete_white">
                            </ImageView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/order_p2_cancel_cardView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/fab_color"
                        app:cardCornerRadius="20dp">
                        <LinearLayout
                            android:id="@+id/order_p2_cancel_linearLayout"
                            style="@style/Menu_Item_LinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/ic_back_white">
                            </ImageView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:layout_margin="3dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:gravity="left">
                <Button
                    android:id="@+id/button_order_p2_back"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="start"
                    android:gravity="left"
                    android:background="@drawable/round_button"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="@string/back"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_arrow_left_white"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/button_order_p2_continue"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:background="@drawable/round_button"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="@string/proceed"
                    android:textAllCaps="false"
                    android:drawableEnd="@drawable/ic_arrow_right_white"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>