<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/objectDetails_top_level"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true">

        <EditText android:id="@+id/objectDetails_invisibleFocusHolder"
            style="@style/InvisibleFocusHolder"/>

        <LinearLayout
            android:id="@+id/objectDetails_summary_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                app:cardElevation="1dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/jerry_grey_light">
                <LinearLayout
                    android:id="@+id/objectDetails_lock_layout_visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_lock_person_white"
                        app:tint="@color/jerry_blue">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    app:cardElevation="0dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:adjustViewBounds="false"
                        app:tint="@color/jerry_blue"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    app:cardElevation="0dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/objectDetails_image_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:src="@drawable/ic_check_white_o50"
                        android:adjustViewBounds="false"
                        app:tint="@color/jerry_green"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    app:cardElevation="0dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/objectDetails_delete_image_view"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:src="@drawable/ic_cancel_white_o60"
                        android:adjustViewBounds="false"
                        app:tint="@color/jerry_red"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical">
                <TextView
                    android:id="@+id/objectDetails_jobName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    style="@style/recycleView_Item_Text"
                    android:text="j-o-b    n-a-m-e"

                    android:textSize="16sp"
                    android:layout_gravity="start"
                    android:ems="10"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/objectDetails_retractable_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right">
            <Button
                android:id="@+id/objectDetails_retractable_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|center"
                android:layout_margin="5dp"
                android:clickable="true"
                android:background="@drawable/ic_arrow_down_white"
                android:backgroundTint="@color/jerry_blue"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="-5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:id="@+id/objectDetails_summary_expanded"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/jerry_grey_light">
                    <LinearLayout
                        android:id="@+id/objectDetails_lock_layout_extended"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:visibility="visible">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_lock_person_white"
                            app:tint="@color/jerry_blue">
                        </ImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="false"
                        app:cardElevation="0dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="0dp"
                            android:adjustViewBounds="false"
                            app:tint="@color/jerry_blue"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="false"
                        app:cardElevation="0dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/objectDetails_image_view_extended"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="0dp"
                            android:src="@drawable/ic_check_white_o50"
                            android:adjustViewBounds="false"
                            app:tint="@color/jerry_green"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="false"
                        app:cardElevation="0dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/objectDetails_delete_image_view_extended"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_margin="0dp"
                            android:src="@drawable/ic_cancel_white_o60"
                            android:adjustViewBounds="false"
                            app:tint="@color/jerry_red"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">
                         <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/recycleView_Item_Text"
                            android:layout_gravity="left"
                            android:layout_width="wrap_content"
                            android:paddingTop="5dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/objectDetails_jobName_extended"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/jerry_blue"
                                android:ems="12"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="t-e-s-t    n-a-m-e"
                                android:hint="@string/object_jobName"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:focusedByDefault="false"
                                android:textSize="12sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/recycleView_Item_Text"
                            android:layout_gravity="left"
                            android:layout_width="wrap_content"
                            android:paddingTop="5dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/objectDetail_jobDescription_extended"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/jerry_blue"
                                android:ems="12"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="t-e-s-t    d-e-s-c-r-i-p-t-i-o-n"
                                android:hint="@string/object_jobDescription"
                                android:inputType="textMultiLine"
                                android:minLines="3"
                                android:maxLines="5"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:focusedByDefault="false"
                                android:textSize="12sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                         <LinearLayout
                            android:id="@+id/objectDetails_retractable_button_layout_extended"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right">
                            <Button
                                android:id="@+id/objectDetails_retractable_button_extended"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="right|top"
                                android:layout_margin="5dp"
                                android:clickable="true"
                                android:background="@drawable/ic_arrow_up_white"
                                android:backgroundTint="@color/jerry_blue"/>
                    </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                            <TextView
                                style="@style/recycleView_Item_Text"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/objectDetails_switchButton_label"
                                android:fontFamily="@font/poppinsmedium"
                                android:textColor="@color/jerry_grey"
                                android:textSize="12sp"
                                android:ems="7">
                            </TextView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:orientation="vertical"
                                android:layout_marginRight="40dp"
                                android:layout_gravity="right">
                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/objectDetails_switchButton"
                                    style="@style/SwitchCompatStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:visibility="visible">
                                </androidx.appcompat.widget.SwitchCompat>
                                <TextView
                                    android:id="@+id/objectDetails_switchButton_label"
                                    style="@style/recycleView_Item_Text"
                                    android:textSize="10sp"
                                    android:layout_gravity="right"
                                    android:text="@string/object_jobDone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/recycleView_Item_Text"
                            android:text="@string/object_foto"
                            android:layout_margin="8dp">
                        </TextView>
                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="1dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">
                                <GridLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:alignmentMode="alignBounds"
                                    android:columnCount="3"
                                    android:layout_weight="1"
                                    android:columnOrderPreserved="false"
                                    android:layout_margin="5dp"
                                    android:orientation="horizontal">
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/objectDetails_foto_recycleView_extended"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                    </androidx.recyclerview.widget.RecyclerView>
                                </GridLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="-8dp"
                            android:layout_marginBottom="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            app:cardElevation="0dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="right">

                            <LinearLayout
                                android:id="@+id/objectDetails_add_picture_button_layoutButtons"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/objectDetails_add_picture_cardView"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    android:layout_gravity="center_vertical"
                                    android:backgroundTint="@color/fab_color"
                                    app:cardCornerRadius="20dp">
                                    <LinearLayout
                                        android:id="@+id/objectDetails_add_picture_button_extended"
                                        style="@style/Menu_Item_LinearLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:clickable="true"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:src="@drawable/ic_attachment_white">
                                        </ImageView>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/objectDetails_take_picture_cardView"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    android:layout_gravity="center_vertical"
                                    android:backgroundTint="@color/fab_color"
                                    app:cardCornerRadius="20dp">
                                    <LinearLayout
                                        android:id="@+id/objectDetails_take_picture_button_extended"
                                        style="@style/Menu_Item_LinearLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:clickable="true"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:src="@drawable/ic_camera_white">
                                        </ImageView>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/objectDetails_delete_picture_button_layoutButtons"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/objectDetails_delete_picture_cardView"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    android:layout_gravity="center_vertical"
                                    android:backgroundTint="@color/fab_color"
                                    app:cardCornerRadius="20dp">
                                    <LinearLayout
                                        android:id="@+id/objectDetails_delete_picture_button_extended"
                                        style="@style/Menu_Item_LinearLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:clickable="true"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:src="@drawable/ic_delete_white">
                                        </ImageView>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/objectDetails_delete_cancel_picture_cardView"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    android:layout_gravity="center_vertical"
                                    android:backgroundTint="@color/fab_color"
                                    app:cardCornerRadius="20dp">
                                    <LinearLayout
                                        android:id="@+id/objectDetails_delete_cancel_picture_button_extended"
                                        style="@style/Menu_Item_LinearLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:clickable="true"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:src="@drawable/ic_back_white">
                                        </ImageView>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:id="@+id/objectDetails_retractable_button_toTop_layout_extended"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right">
                            <Button
                                android:id="@+id/objectDetails_retractable_button_toTop_extended"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="right|top"
                                android:layout_margin="5dp"
                                android:clickable="true"
                                android:background="@drawable/ic_arrow_up_white"
                                android:backgroundTint="@color/jerry_blue"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>