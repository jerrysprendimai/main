<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/my_top_level"
    android:layout_margin="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/object_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            android:layout_margin="2dp">
        <LinearLayout
            android:id="@+id/my_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email_assigment_radiobutton"
                android:layout_margin="5dp"
                android:checked="true"
                android:buttonTint="@color/jerry_grey"
                android:layout_gravity="center">
            </RadioButton>

            <androidx.cardview.widget.CardView
                android:id="@+id/object_cardView_indicator"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="2dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/jerry_transperent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:clickable="false"
                    app:cardElevation="0dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/object_image_view"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_margin="0dp"
                            android:adjustViewBounds="false"
                            android:src="@drawable/ic_object_white"
                            app:tint="@color/jerry_blue" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="1dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/object_name_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                style="@style/recycleView_Item_Text"
                                android:hint="@string/object_name"
                                android:textStyle="normal"
                                android:textSize="10sp"
                                android:layout_gravity="start|center"
                                android:ems="4"/>
                            <TextView
                                android:id="@+id/object_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/recycleView_Item_Text"
                                android:includeFontPadding="false"
                                android:layout_gravity="start|center"
                                android:textStyle="normal"
                                android:textSize="11sp"
                                android:hint="b-a-u-s-t-e-l-l-e--n-a-m-e"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="1dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/object_customer_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                style="@style/recycleView_Item_Text"
                                android:hint="@string/object_customer"
                                android:textStyle="normal"
                                android:textSize="10sp"
                                android:layout_gravity="start|center"
                                android:ems="4"/>
                            <TextView
                                android:id="@+id/object_customer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/recycleView_Item_Text"
                                android:includeFontPadding="false"
                                android:layout_gravity="start|center"
                                android:textStyle="normal"
                                android:textSize="11sp"
                                android:hint="a-u-f-t-r-a-g-g-e-b-e-r"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</LinearLayout>