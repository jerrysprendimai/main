<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityEmailShow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/email_filter_row_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:layout_gravity="top"
            android:background="@color/jerry_grey_opacity"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_gravity="center"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    app:cardElevation="0dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/jerry_blue"
                        android:backgroundTint="@color/jerry_blue"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="1dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_margin="0dp"
                                android:adjustViewBounds="false"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_email_white"
                                app:tint="@color/white"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        style="@style/recycleView_Item_Text"
                        android:hint="@string/email"
                        android:textStyle="bold"
                        android:textColorHint="@color/white"
                        android:textSize="22sp"
                        android:layout_gravity="start"
                        android:ems="5"/>
                    <TextView
                        android:id="@+id/email_mailbox_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        style="@style/recycleView_Item_Text"
                        android:hint="@string/email"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:layout_gravity="start"
                        android:ems="5"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">
                    <Button
                        android:id="@+id/email_filter_retractable_button"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        android:background="@drawable/ic_arrow_down_white"
                        android:backgroundTint="@color/jerry_blue"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/email_filter_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_gravity="top"
            android:background="@color/jerry_grey_opacity"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="vertical"
                        android:layout_marginRight="40dp"
                        android:layout_gravity="right">
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/email_mailbox_switchButton"
                            style="@style/SwitchCompatStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="visible">
                        </androidx.appcompat.widget.SwitchCompat>
                        <TextView
                            android:id="@+id/email_switchButton_label"
                            style="@style/recycleView_Item_Text"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:text="@string/email_mailbox_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/email_show_all_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:buttonTint="@color/jerry_grey">
                    </CheckBox>
                    <TextView
                        android:id="@+id/email_show_all_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/recycleView_Item_Text"
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        android:text="@string/email_show_all"
                        >
                    </TextView>
                </LinearLayout>
                </LinearLayout>
        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/my_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="60dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_recycle_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_email_add_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="30dp"
            android:backgroundTint="@color/jerry_blue"
            android:src="@drawable/ic_add_white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_email_delete"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="30dp"
            android:paddingRight="0dp"
            android:backgroundTint="@color/jerry_blue"
            android:src="@drawable/ic_delete_white" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>