<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/my_top_level"
    android:layout_margin="5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/object_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="1dp"
        android:layout_margin="4dp">
        <LinearLayout
            android:id="@+id/my_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/object_cardView_indicator"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/jerry_grey_light">
                <LinearLayout
                    android:id="@+id/object_lock_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_lock_person_white"
                        app:tint="@color/jerry_blue">
                    </ImageView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    app:cardElevation="0dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/object_image_view"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_margin="0dp"
                        android:adjustViewBounds="false"
                        android:src="@drawable/ic_object_white"
                        app:tint="@color/jerry_blue"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                style="@style/recycleView_Item_Text"
                                android:hint="@string/object_name"
                                android:textStyle="bold"
                                android:layout_gravity="start"
                                android:ems="4"/>
                            <TextView
                                android:id="@+id/object_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/recycleView_Item_Text"
                                android:includeFontPadding="false"
                                android:layout_gravity="start"
                                android:hint="b-a-u-s-t-e-l-l-e--n-a-m-e"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                style="@style/recycleView_Item_Text"
                                android:hint="@string/object_customer"
                                android:textStyle="bold"
                                android:layout_gravity="start"
                                android:ems="4"/>
                            <TextView
                                android:id="@+id/object_customer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/recycleView_Item_Text"
                                android:includeFontPadding="false"
                                android:layout_gravity="start"
                                android:hint="a-u-f-t-r-a-g-g-e-b-e-r"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="6dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="3dp">
                        <TextView
                            android:id="@+id/object_date_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            style="@style/recycleView_Item_Text"
                            android:textSize="11dp"
                            android:hint="@string/object_date"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/object_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            style="@style/recycleView_Item_Text"
                            android:textColor="@color/jerry_blue"
                            android:textColorHint="@color/jerry_blue"
                            android:textSize="11dp"
                            android:hint="d-a-t-e"
                            />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:layout_marginBottom="-3dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/object_completness_label"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:includeFontPadding="false"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:gravity="center_vertical|right"
                        style="@style/recycleView_Item_Text"
                        android:hint="@string/object_completness"
                        android:textStyle="bold"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_margin="6dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ProgressBar
                                android:id="@+id/object_progess_bar"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:backgroundTint="@color/jerry_blue"
                                android:progressDrawable="@drawable/progressbar_gradient_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_gravity="left"
                                android:progress="45"
                                android:max="100"
                                android:min="1"
                                android:textStyle="bold"
                                android:includeFontPadding="false">
                            </ProgressBar>

                            <TextView
                                android:id="@+id/object_progess_bar_label"
                                style="@style/recycleView_Item_Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@id/object_progess_bar"
                                android:layout_alignTop="@id/object_progess_bar"
                                android:layout_alignRight="@id/object_progess_bar"
                                android:layout_alignBottom="@id/object_progess_bar"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:text="100.0%"
                                android:textColor="@color/jerry_blue"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>