<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:layout_margin="1dp"
        app:cardElevation="0dp">
        <TextView
            android:id="@+id/email_not_assigned_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="!"
            android:elevation="2dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="11sp"
            android:background="@drawable/circle_view"
            android:textColor="@color/white"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="52dp"
            android:layout_gravity="left">
        </TextView>
        <TextView
            android:id="@+id/email_new_indicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:text=""
            android:elevation="2dp"
            android:gravity="center"
            android:background="@drawable/circle_view_small"
            android:backgroundTint="@color/jerry_light_blue"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp">
        </TextView>
        <androidx.cardview.widget.CardView
            android:id="@+id/object_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="1dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/my_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/email_cardView_indicator"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/jerry_grey_light">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="false"
                        app:cardElevation="0dp"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            app:cardElevation="1dp"
                            app:cardCornerRadius="15dp">
                            <ImageView
                                android:id="@+id/email_type_in"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="right|center"
                                android:layout_margin="0dp"
                                android:adjustViewBounds="false"
                                android:src="@drawable/ic_in_white"
                                app:tint="@color/jerry_blue" />
                            <ImageView
                                android:id="@+id/email_type_out"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="left|center"
                                android:layout_margin="0dp"
                                android:adjustViewBounds="false"
                                android:src="@drawable/ic_out_white"
                                app:tint="@color/jerry_blue" />
                            <ImageView
                                android:id="@+id/email_image_view"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="0dp"
                                android:adjustViewBounds="false"
                                android:src="@drawable/ic_email_white"
                                app:tint="@color/jerry_blue" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="9dp"
                                android:layout_marginRight="3dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/email_sender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/recycleView_Item_Text"
                                    android:textSize="16dp"
                                    android:layout_weight="8"
                                    android:includeFontPadding="false"
                                    android:layout_gravity="start"
                                    android:hint="s-e-n-d-e-r"
                                    />
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:id="@+id/email_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    style="@style/recycleView_Item_Text"
                                    android:textColor="@color/jerry_grey_light"
                                    android:textColorHint="@color/jerry_grey_light"
                                    android:textSize="11dp"
                                    android:hint="d-a-t-e"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="0dp"
                                android:layout_marginLeft="9dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/email_subject"
                                    android:layout_weight="6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/recycleView_Item_Text"
                                    android:includeFontPadding="false"
                                    android:layout_gravity="start"
                                    android:hint="s-u-b-je-c-t"/>
                                <ImageView
                                    android:id="@+id/email_attachment_indicator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_attachment_white"
                                    app:tint="@color/jerry_grey_light">
                                </ImageView>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="3dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp">

                            <TextView
                                android:id="@+id/email_text"
                                style="@style/recycleView_Item_Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="t-e-x-t"
                                android:includeFontPadding="false"
                                android:textColor="@color/jerry_blue" />
                        </LinearLayout>
                    </LinearLayout>-->
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>
</LinearLayout>