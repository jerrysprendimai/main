<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/objectDetailsPicture_top_level"
    android:background="@color/jerry_grey_opacity"
    android:layout_margin="3dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:backgroundTint="@color/jerry_grey_opacity"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:id="@+id/my_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/objectDetailsPicture_img"
                android:layout_gravity="center"
                android:clickable="true"
                android:src="@drawable/ic_picture_placeholder_white"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                android:layout_width="70dp"
                android:layout_height="70dp">
            </ImageView>
        </LinearLayout>
        <ImageView
            android:id="@+id/objectDetailsPicture_upl_failed"
            android:layout_gravity="bottom|center"
            android:clickable="false"
            android:src="@drawable/ic_cancel"
            android:background="@android:color/transparent"
            android:layout_width="25dp"
            android:layout_height="25dp">
        </ImageView>
        <ImageView
            android:id="@+id/objectDetailsPicture_upl"
            android:layout_gravity="bottom|center"
            android:clickable="false"
            android:src="@drawable/ic_upload_white"
            android:background="@android:color/transparent"
            android:layout_width="25dp"
            android:layout_height="25dp">
        </ImageView>
        <ProgressBar
            android:id="@+id/objectDetailsPicture_progressBar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:progressDrawable="@drawable/progressbar_gradient_progress"
            android:indeterminateTint="@color/jerry_blue"
            android:layout_gravity="center"
            android:layout_margin="0dp">
        </ProgressBar>
        <ProgressBar
            android:id="@+id/objectDetailsPicture_progressBar_upl"
            android:background="@color/jerry_grey_opacity"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:progressDrawable="@drawable/progressbar_gradient_progress_upl"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center"
            android:progress="45"
            android:max="100"
            android:min="1"
            android:textStyle="bold"
            android:includeFontPadding="false">
        </ProgressBar>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:contentDescription="@string/object_jobName" />

</LinearLayout>