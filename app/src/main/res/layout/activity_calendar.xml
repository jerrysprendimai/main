<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCalendar"
    android:orientation="vertical"
    android:background="@drawable/background">

    <androidx.cardview.widget.CardView
        android:id="@+id/calendar_cardView2"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/calendar_caption"
                android:drawableStart="@drawable/ic_arrow_up_white"
                android:drawableEnd="@drawable/ic_arrow_down_white"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="date"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/jerry_grey"
                android:textColorHint="@color/jerry_grey">
            </TextView>
        </LinearLayout>
        <com.github.sundeepk.compactcalendarview.CompactCalendarView
            android:id="@+id/calendar_sundeepk_calendarView"
            android:layout_width="match_parent"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_height="250dp"
            app:compactCalendarTargetHeight="250dp"
            app:compactCalendarTextSize="14sp"
            app:compactCalendarBackgroundColor="@color/white"
            app:compactCalendarTextColor="@color/jerry_dark_grey"
            app:compactCalendarCurrentSelectedDayBackgroundColor="@color/jerry_light_opacity"
            app:compactCalendarCurrentDayBackgroundColor="@color/white"
            app:compactCalendarMultiEventIndicatorColor="#fff"
            />
    </LinearLayout>

    </androidx.cardview.widget.CardView>

