<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCalendar"
    android:orientation="vertical"
    android:background="@drawable/background">

    <androidx.cardview.widget.CardView
        android:id="@+id/calendar_cardView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/calendar_button_left"
                android:drawableTint="@color/jerry_dark_grey"
                android:drawableEnd="@drawable/ic_arrow_left_white"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textSize="18sp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/jerry_grey"
                android:textColorHint="@color/jerry_grey">
            </TextView>
            <TextView
                android:id="@+id/calendar_caption"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/jerry_grey"
                android:textColorHint="@color/jerry_grey">
            </TextView>
            <TextView
                android:id="@+id/calendar_button_right"
                android:drawableTint="@color/jerry_dark_grey"
                android:drawableStart="@drawable/ic_arrow_right_white"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/jerry_grey"
                android:textColorHint="@color/jerry_grey">
            </TextView>
        </LinearLayout>
        <com.github.sundeepk.compactcalendarview.CompactCalendarView
            android:id="@+id/calendar_sundeepk_calendarView"
            android:layout_width="match_parent"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_height="250dp"
            app:compactCalendarTargetHeight="250dp"
            app:compactCalendarTextSize="14sp"
            app:compactCalendarBackgroundColor="@color/white"
            app:compactCalendarTextColor="@color/jerry_dark_grey"
            app:compactCalendarCurrentSelectedDayBackgroundColor="@color/jerry_light_opacity"
            app:compactCalendarCurrentDayBackgroundColor="@color/jerry_light_opacity"
            app:compactCalendarMultiEventIndicatorColor="#fff"
            />
    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/jerry_transperent"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/calendar_day_caption"
            android:paddingTop="10dp"
            android:paddingBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/recycleView_Item_Text"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:layout_gravity="start"
            android:hint="d-a-t-e"
            >
        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calendar_event_recycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:visibility="gone"
            android:layout_margin="20dp"
            android:id="@+id/test_button_delte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete">
        </Button>
    </LinearLayout>


</LinearLayout>