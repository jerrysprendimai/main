<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:backgroundTint="#ECEAEA"
    android:id="@+id/chat_main_containerView"
    tools:context=".ActivityChat">

    <LinearLayout
        android:id="@+id/chat_lineatLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/bottomsheet_top_cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            app:cardElevation="1dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal">
              <LinearLayout
                  android:id="@+id/chat_iconButton"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:background="?android:attr/selectableItemBackground"
                  android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/jerry_grey_opacity">

                <androidx.cardview.widget.CardView
                android:layout_margin="8dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="8dp"
                android:layout_gravity="center"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/chat_room_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    app:tint="@color/jerry_blue">
                </ImageView>
                <!--<TextView
                    android:id="@+id/chat_uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v-a-r-d-e-n-i-s"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:ems="9">
                </TextView>-->
            </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>
             </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="@drawable/background">
              <LinearLayout
                android:id="@+id/chat_bojectNameButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="4">
                    <TextView
                        android:id="@+id/chat_roomName"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="o-b-j-e-c-t   n-a-m-e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="17sp"
                        android:layout_gravity="left"
                        android:ems="10"/>
                    <TextView
                        android:id="@+id/chat_roomName2"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="o-b-j-e-c-t   n-a-m-e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textSize="12sp"
                        android:layout_gravity="left"
                        android:ems="10"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/chat_participantsButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="6"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp">
                <TextView
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/participant_count"
                    android:gravity="center|center_horizontal"
                    android:textStyle="italic"
                    android:textColor="@color/teal_700"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/chat_participantsCount"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="+6"
                    android:textColor="@color/teal_700"
                    android:layout_marginTop="-8dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:ems="2"/>
            </LinearLayout>
           </LinearLayout>
         </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/chat_progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:indeterminateTint="@color/jerry_blue"
        app:layout_constraintTop_toTopOf="@id/chat_lineatLayout">
    </ProgressBar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@drawable/background_chat"
        app:layout_constraintBottom_toTopOf="@+id/chat_editText"
        app:layout_constraintTop_toBottomOf="@id/chat_lineatLayout"/>

    <EditText
        android:id="@+id/chat_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:maxHeight="100dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/message_input_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chat_sendButton"
        app:layout_constraintStart_toStartOf="parent"
        >
    </EditText>
    <ImageView
        android:id="@+id/chat_sendButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_send_white"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/jerry_blue">
    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>