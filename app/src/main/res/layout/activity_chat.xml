<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chat_main_containerView"
    android:background="@drawable/background"
    android:backgroundTint="@color/jerry_grey_light"
    tools:context=".ActivityChat">

    <LinearLayout
        android:id="@+id/chat_lineatLayout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/jerry_grey"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_margin="8dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="5dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/chat_room_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:tint="@color/jerry_blue">
            </ImageView>
            <!--<TextView
                android:id="@+id/chat_uname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v-a-r-d-e-n-i-s"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:ems="9">
            </TextView>-->
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/chat_roomName"
            android:fontFamily="@font/poppinsmedium"
            android:text="o-b-j-e-c-t   n-a-m-e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:ems="10">
        </TextView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/chat_progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:indeterminateTint="@color/jerry_blue"
        app:layout_constraintTop_toTopOf="@id/chat_lineatLayout">
    </ProgressBar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/chat_editText"
        app:layout_constraintTop_toBottomOf="@id/chat_lineatLayout"/>

    <EditText
        android:id="@+id/chat_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:maxHeight="100dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="9dp"
        android:background="@drawable/message_input_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chat_sendButton"
        app:layout_constraintStart_toStartOf="parent"
        >
    </EditText>
    <ImageView
        android:id="@+id/chat_sendButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_send_white"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/jerry_blue">
    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>