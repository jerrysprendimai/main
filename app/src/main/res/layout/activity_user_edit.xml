<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ActivityUserEdit">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/user_edit_save"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:id="@+id/user_edit_cancel"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/jerry_grey_light_opacity"
                app:cardCornerRadius="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        app:cardCornerRadius="2dp"
                        app:cardBackgroundColor="@color/jerry_grey_light_opacity"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/user_edit_utypeIndicator"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:cardBackgroundColor="@color/jerry_light_grey">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_person_white">
                                </ImageView>
                            </androidx.cardview.widget.CardView>
                            <!--<TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsmedium"
                                android:layout_margin="5dp"
                                android:textSize="12sp"
                                android:layout_gravity="center_vertical"
                                android:hint="@string/user_type">
                            </TextView>-->
                            <TextView
                                android:id="@+id/user_edit_ulevel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsmedium"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:layout_margin="5dp"
                                android:layout_gravity="center_vertical"
                                android:text="u-s-e-r___t-y-p-e"
                                android:ems="7">
                            </TextView>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/user_edit_savedStatus_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_gravity="center|right"
                            android:src="@drawable/ic_item_not_saved"
                            app:tint="@color/jerry_blue" />
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            style="@style/Input_layout">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/user_edit_uname_value"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/jerry_blue"
                                android:ems="8"
                                android:fontFamily="@font/poppinsmedium"
                                android:hint="@string/user_uname"
                                android:inputType="textPersonName"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Input_layout"                        >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/user_edit_upasswd_value"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/jerry_blue"
                                android:ems="8"
                                android:fontFamily="@font/poppinsmedium"
                                android:hint="@string/user_password"
                                android:inputType="textPersonName"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:orientation="vertical"
                            android:layout_gravity="center">
                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/user_edit_utype_switchButton"
                                style="@style/SwitchCompatStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:visibility="visible"
                                >
                            </androidx.appcompat.widget.SwitchCompat>
                            <TextView
                                android:visibility="visible"
                                android:id="@+id/user_edit_utype_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="u-s-e-r___t-y-p-e"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:fontFamily="@font/poppinsmedium"
                                android:textColor="@color/jerry_grey"
                                android:textSize="10sp"
                                android:ems="7">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Input_layout"
                            android:layout_marginLeft="5dp"
                            android:paddingTop="1dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/user_edit_fname_value"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/jerry_blue"
                                android:ems="8"
                                android:fontFamily="@font/poppinsmedium"
                                android:hint="@string/user_fname"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Input_layout"
                            android:layout_marginLeft="5dp"
                            android:paddingTop="1dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/user_edit_regdate_value"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:clickable="false"
                                android:ems="8"
                                android:fontFamily="@font/poppinsmedium"
                                android:hint="@string/reg_date"
                                android:inputType="textPersonName"
                                android:textColor="@color/jerry_grey"
                                android:textColorHint="@color/black"
                                android:textSize="11sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:paddingTop="5dp">
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Input_layout"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:paddingTop="1dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/user_edit_lname_value"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/jerry_blue"
                                android:ems="8"
                                android:fontFamily="@font/poppinsmedium"
                                android:hint="@string/user_lname"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Input_layout"
                            android:layout_marginLeft="5dp"
                            android:paddingTop="1dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/user_edit_lastLogin_value"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:clickable="false"
                                android:ems="8"
                                android:fontFamily="@font/poppinsmedium"
                                android:hint="@string/last_login"
                                android:inputType="textPersonName"
                                android:textColor="@color/jerry_grey"
                                android:textColorHint="@color/black"
                                android:textSize="11sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <include layout="@layout/save_cancel_layout" />
        <include layout="@layout/footer_layout" />
    </androidx.cardview.widget.CardView>

</LinearLayout>