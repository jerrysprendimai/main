<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:id="@+id/chat_mainContainer"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/chat_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsmedium"
        android:layout_gravity="center"
        android:textSize="9sp"
        android:textStyle="italic"
        android:textColor="@color/jerry_dark_grey_opacity"
        android:layout_marginBottom="-10dp"
        android:textAlignment="center"
        android:text="0000-00-00"
        android:ems="5"/>
    <TextView
        android:id="@+id/chat_date_line"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@color/jerry_light_opacity"
        android:gravity="center_horizontal"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ccLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/senderImage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/teal_700"></ImageView>

                <TextView
                    android:id="@+id/message_senderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="u-s-e-r"
                    android:textSize="8sp"
                    app:layout_constraintTop_toBottomOf="@id/senderImage"></TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txt_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="9dp"
            android:background="@drawable/background_message"
            android:fontFamily="@font/poppinsmedium"
            android:maxWidth="200dp"
            android:padding="8dp"
             />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="09:15"
            android:textSize="9dp"
            />
        <LinearLayout
            android:id="@+id/chat_photo_LinearView"
            android:orientation="vertical"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_margin="3dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                android:backgroundTint="@color/jerry_grey_opacity"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:id="@+id/chat_img_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/chat_img"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:src="@drawable/ic_picture_placeholder_white"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:layout_width="100dp"
                        android:layout_height="100dp">
                    </ImageView>
                </LinearLayout>
                <ProgressBar
                    android:id="@+id/chat_img_progressBar"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:progressDrawable="@drawable/progressbar_gradient_progress"
                    android:indeterminateTint="@color/jerry_blue"
                    android:layout_gravity="center"
                    android:layout_margin="0dp">
                </ProgressBar>
                <ProgressBar
                    android:id="@+id/chat_progressBar_upl"
                    android:background="@color/jerry_grey_opacity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:progressDrawable="@drawable/progressbar_gradient_progress_upl"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_gravity="center"
                    android:progress="45"
                    android:max="100"
                    android:min="1"
                    android:textStyle="bold"
                    android:includeFontPadding="false">
                </ProgressBar>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/chat_deleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="11sp"
        android:textStyle="italic"
        android:textColor="@color/jerry_dark_grey_opacity"
        android:layout_marginBottom="0dp"
        android:layout_gravity="right"
        android:text="@string/deleted"
        android:ems="5"/>
</LinearLayout>